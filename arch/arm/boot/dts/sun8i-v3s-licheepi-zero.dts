/dts-v1/;
#include "sun8i-v3s.dtsi"
#include "sunxi-common-regulators.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/pwm/pwm.h>
#include <dt-bindings/input/input.h>

/ {
	model = "Lichee Pi Zero";
	compatible = "licheepi,licheepi-zero", "allwinner,sun8i-v3s";

	aliases {
		serial0 = &uart0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	backlight: backlight {
			compatible = "pwm-backlight";
			pwms = <&pwm 0 50000 PWM_POLARITY_INVERTED>;
			enable-gpios = <&pio 1 1 GPIO_ACTIVE_HIGH>; // PB3

			brightness-levels = <0 1 2 4 8 16 32 64 128 255>;
			default-brightness-level = <9>;
	};

	leds {
		compatible = "gpio-leds";

		// blue_led {
		// 	label = "licheepi:blue:usr";
		// 	gpios = <&pio 6 1 GPIO_ACTIVE_LOW>; /* PG1 */
		// };

		// green_led {
		// 	label = "licheepi:green:usr";
		// 	gpios = <&pio 6 0 GPIO_ACTIVE_LOW>; /* PG0 */
		// 	default-state = "on";
		// };

		// red_led {
		// 	label = "licheepi:red:usr";
		// 	gpios = <&pio 6 2 GPIO_ACTIVE_LOW>; /* PG2 */
		// };

		touch_led {
			label = "licheepi:red:usr";
			gpios = <&pio 1 5 GPIO_ACTIVE_LOW>; /* PB5 */
		};
	};

	gpio_keys {
        compatible = "gpio-keys";
        pinctrl-names = "default";
        pinctrl-0 = <&key_pins>;
        #address-cells = <1>;
        #size-cells = <0>;
        // autorepeat;
        
		button@0
		{
			label = "Power";
			linux,code = <KEY_ENTER>;
			interrupt-parent = <&pio>;
			interrupts = <6 6 IRQ_TYPE_EDGE_FALLING>; //PG6
        };
		button@1
		{
			label = "Headphone Det";
			linux,code = <KEY_F1>;
			interrupt-parent = <&pio>;
			interrupts = <1 2 IRQ_TYPE_EDGE_FALLING>; //PB2
		};
	};

	rotary0@0 {
        compatible = "rotary-encoder";
		pinctrl-names = "default";
        pinctrl-0 = <&rotary0_pins>;
		gpios = <&pio 4 10 GPIO_ACTIVE_LOW>, <&pio 4 11 GPIO_ACTIVE_LOW>; /* PE10, PE11 */
        linux,axis = <0>; /* REL_X */
        rotary-encoder,encoding = "gray";
        rotary-encoder,relative-axis;
	};

	rotary1@0 {
        compatible = "rotary-encoder";
		pinctrl-names = "default";
        pinctrl-0 = <&rotary1_pins>;
		gpios = <&pio 4 9 GPIO_ACTIVE_LOW>, <&pio 4 12 GPIO_ACTIVE_LOW>; /* PE9, PE12 */
        linux,axis = <1>; /* REL_Y */
        rotary-encoder,encoding = "gray";
        rotary-encoder,relative-axis;
	};

};

&mmc0 {
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
};

&uart0 {
	pinctrl-0 = <&uart0_pb_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&usb_otg {
	// 	dr_mode = "otg";
	dr_mode = "peripheral";
	status = "okay";
};

&usbphy {
	// usb0_id_det-gpios = <&pio 5 6 GPIO_ACTIVE_HIGH>; // PF6
	usb0_vbus_det-gpios = <&pio 6 8 GPIO_ACTIVE_HIGH>; // PG8
	
	status = "okay";
};

&pio {
	spi0_cs_pins: spi0_cs_pins {
		pins = "PC3", "PB10";
		function = "gpio_out";
	};

	pwm0_pin: pwm0-pin {
		pins = "PB4";
		function = "pwm";
	};

	rotary0_pins: rotary0_pins {
		pins = "PE10", "PE11";
		function = "gpio_in";
	};

	rotary1_pins: rotary1_pins {
		pins = "PE9", "PE12";
		function = "gpio_in";
	};

	key_pins: key_pins {
		pins = "PB2", "PG6";
		function = "gpio_in";
	};
};

&pwm {
	pinctrl-names = "default";
	pinctrl-0 = <&pwm0_pin>;
	status = "okay";
};

&codec {
	status = "okay";
};

&ccu {
	compatible = "allwinner,sun8i-r11-ccu";
};

&i2s0 {
	status = "disabled";
};

&i2c0 {
	/* ... */
	cyttsp@24 {
		compatible = "cypress,cyttsp-i2c";
		reg = <0x24>;
		interrupt-parent = <&pio>;
		interrupts = <1 1 0>; // PB1 interrupt
		interrupt-name = "touch-interrupt";

		reset-gpios = <&pio 1 0 GPIO_ACTIVE_LOW>; // PB0

		touchscreen-size-x = <800>;
		touchscreen-size-y = <480>;
		touchscreen-fuzz-x = <4>;
		touchscreen-fuzz-y = <7>;

		bootloader-key = /bits/ 8 <0x01 0x02 0x03 0x04 0x05 0x06 0x07 0x08>;
		active-distance = <8>;
		active-interval-ms = <0>;
		lowpower-interval-ms = <200>;
		touch-timeout-ms = <100>;
	};

	ext_codec: codec@4c {
		compatible = "ti,tlv320adc6140";
		reg = <0x4c>;
		ti,vref-source = <0>;
		reset-gpios = <&pio 4 8 GPIO_ACTIVE_HIGH>; // PE 8
	};
};

&spi0 {
	status ="okay";

	pinctrl-names = "default";
	pinctrl-0 = <&spi0_pins &spi0_cs_pins>;
	//             PC3                        PB10                        PE2                           PG9
	cs-gpios = <&pio 2 3 GPIO_ACTIVE_HIGH>, <&pio 1 10 GPIO_ACTIVE_HIGH>, <&pio 4 2 GPIO_ACTIVE_HIGH>, <&pio 6 9 GPIO_ACTIVE_HIGH>;

	hx8369: hx8369@1 {
		compatible = "himax,hx8369a", "himax,hx8369";
		reg = <1>;
		spi-max-frequency = <50000000>;
		spi-cpol;
		spi-cpha;
		gpios-reset = <&pio 4 13 0>; // PE 13
	};
};