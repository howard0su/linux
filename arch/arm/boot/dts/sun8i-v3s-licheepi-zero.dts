/dts-v1/;
#include "sun8i-v3s.dtsi"
#include "sunxi-common-regulators.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/pwm/pwm.h>
#include <dt-bindings/input/input.h>

/ {
	model = "Lichee Pi Zero";
	compatible = "licheepi,licheepi-zero", "allwinner,sun8i-v3s";

	aliases {
		serial0 = &uart0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	backlight: backlight {
			compatible = "pwm-backlight";
			pwms = <&pwm 0 50000 PWM_POLARITY_INVERTED>;
			enable-gpios = <&pio 1 3 GPIO_ACTIVE_HIGH>; // PB3

			brightness-levels = <0 1 2 4 8 16 32 64 128 255>;
			default-brightness-level = <9>;
	};

	// panel: panel {
	// 	compatible = "qiaodian,qd43003c0-40", "simple-panel";
	// 	#address-cells = <1>;
	// 	#size-cells = <0>;
	// 	enable-gpios = <&pio 1 3 GPIO_ACTIVE_HIGH>;//PB3
	// 	backlight = <&backlight>;

	// 	port@0 {
	// 		reg = <0>;
	// 		#address-cells = <1>;
	// 		#size-cells = <0>;

	// 		panel_input: endpoint@0 {
	// 			reg = <0>;
	// 			remote-endpoint = <&tcon0_out_lcd>;
	// 		};
	// 	};
	// };

	leds {
		compatible = "gpio-leds";

		// blue_led {
		// 	label = "licheepi:blue:usr";
		// 	gpios = <&pio 6 1 GPIO_ACTIVE_LOW>; /* PG1 */
		// };

		// green_led {
		// 	label = "licheepi:green:usr";
		// 	gpios = <&pio 6 0 GPIO_ACTIVE_LOW>; /* PG0 */
		// 	default-state = "on";
		// };

		// red_led {
		// 	label = "licheepi:red:usr";
		// 	gpios = <&pio 6 2 GPIO_ACTIVE_LOW>; /* PG2 */
		// };

		touch_led {
			label = "licheepi:red:usr";
			gpios = <&pio 4 11 GPIO_ACTIVE_LOW>; /* PE11 */
		};

		lna_switch {
			label = "licheepi:lna:usr";
			gpios = <&pio 4 0 GPIO_ACTIVE_LOW>; /* PE0 */
		};

		ant_switch {
			label = "licheepi:ant:usr";
			gpios = <&pio 4 1 GPIO_ACTIVE_LOW>; /* PE1 */
		};
	};

	
	spi_emu {
		compatible = "spi-gpio";

		#address-cells = <1>;
		#size-cells = <0>;
		
		//             PC2                        PB10                        PE2                           PE24
		cs-gpios = <&pio 2 2 GPIO_ACTIVE_HIGH>, <&pio 1 10 GPIO_ACTIVE_HIGH>, <&pio 4 2 GPIO_ACTIVE_HIGH>, <&pio 4 24 GPIO_ACTIVE_HIGH>;
		// PC1
		sck-gpios = <&pio 2 1 0>;
		// PC3 
		mosi-gpios = <&pio 2 3 0>;
		// PC0
		miso-gpios = <&pio 2 0 0>;
		
		num-chipselects = <4>;

		flash:mx25l25635e@0 {
			compatible = "jedec,spi-nor";
			reg = <0x0>;
			spi-max-frequency = <100000>;
		};
		lcd: hx8369@1 {
			compatible = "himax,hx8369";
			reg = <0x1>;
			spi-max-frequency = <100000>;
			spi-cpol;
			spi-cpha;
			gpios-reset = <&pio 4 13 GPIO_ACTIVE_HIGH>; // PE 13
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				reg = <0>;
				#address-cells = <1>;
				#size-cells = <0>;

				panel_input: endpoint@0 {
					reg = <0>;
					remote-endpoint = <&tcon0_out_lcd>;
				};
			};
		};
		msi001@2 {
			compatible = "rohm,dh2228fv";
			spi-max-frequency = <100000>;
			reg = <0x2>;
		};
		pe4312@3 {
			compatible = "rohm,dh2228fv";
			spi-max-frequency = <100000>;
			reg = <0x3>;
		};
	};

	gpio_keys {
        compatible = "gpio-keys";
        pinctrl-names = "default";
        pinctrl-0 = <&key_pins>;
        // autorepeat;
        
		button0
		{
			label = "Power";
			linux,code = <KEY_ENTER>;
			interrupt-parent = <&pio>;
			interrupts = <6 6 IRQ_TYPE_EDGE_FALLING>; //PG6
        };

		button1
		{
			label = "Headphone Det";
			linux,code = <KEY_F1>;
			interrupt-parent = <&pio>;
			interrupts = <1 2 IRQ_TYPE_EDGE_FALLING>; //PB2
		};
	};

	rotary0 {
        compatible = "rotary-encoder";
		gpios = <&pio 1 5 0>, <&pio 6 8 0>; /* PB5, PG8 */
        linux,axis = <0>; /* REL_X */
        rotary-encoder,encoding = "gray";
        rotary-encoder,relative-axis;
	};

	rotary1 {
        compatible = "rotary-encoder";
		gpios = <&pio 6 6 0>, <&pio 6 12 0>; /* PG6, PG12 */
        linux,axis = <1>; /* REL_Y */
        rotary-encoder,encoding = "gray";
        rotary-encoder,relative-axis;
	};

	sound_i2s {
		compatible = "simple-audio-card";
		simple-audio-card,name = "IQDecoder";
		simple-audio-card,format = "i2s";
		simple-audio-card,mclk-fs = <256>;

		status = "okay";

		simple-audio-card,cpu {
			sound-dai=<&i2s0>;
		};

		simple-audio-card,codec {
			sound-dai=<&ext_codec>;
		};
	};

};

&mmc0 {
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
};

&uart0 {
	pinctrl-0 = <&uart0_pb_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&usb_otg {
	dr_mode = "otg";
	status = "okay";
};


&pio {
	compatible = "allwinner,sun8i-r11-pinctrl";

	pwm0_pin: pwm0-pin {
		pins = "PB4";
		function = "pwm0";
	};

	key_pins: key_pins {
		pins = "PB2", "PG6";
		function = "gpio_in";
	};

	touch_pins: touch_pins {
		pins = "PB1";
		function = "gpio_in";
	};

	spi0_output: spi0_output_pins {
		pins = "PC1", "PC3", "PC2", "PC0", "PB10", "PE2","PE24";
		function = "gpio_out";
		bias-pull-up;
	};
	
	// spi0_input: spi0_input_pins {
	// 	pins = "PC0";
	// 	function = "gpio_in";
	// };
};

&pwm {
	pinctrl-names = "default";
	pinctrl-0 = <&pwm0_pin>;
	status = "okay";
};

&tcon0 {
	pinctrl-names = "default";
	pinctrl-0 = <&lcd_rgb666_pins>;
	status = "okay";
};

&tcon0_out {
    tcon0_out_lcd: endpoint@0 {
        reg = <0>;
        remote-endpoint = <&panel_input>;
    };
};

&codec {
	allwinner,audio-routing =
		"Headphone", "HP",
		"Headphone", "HPCOM",
		"MIC1", "Mic",
		"Mic", "HBIAS";
	status = "okay";
};

&ccu {
	compatible = "allwinner,sun8i-r11-ccu";
};

&i2s0 {
	sound-dai = <&ext_codec>;
	status = "okay";
};

&usbphy {
	// usb0_id_det-gpios = <&pio 5 6 GPIO_ACTIVE_HIGH>; // PF6
	usb0_vbus_det-gpios = <&pio 6 8 GPIO_ACTIVE_HIGH>; // PG8

	status = "okay";
};

&i2c0 {
	status = "okay";

	/* ... */
	cyttsp@24 {
		compatible = "cypress,cyttsp-i2c";
		reg = <0x24>;
		pinctrl-names = "default";
		pinctrl-0 = <&touch_pins>;
		interrupt-parent = <&pio>;
		interrupts = <1 1 0>; // PB1 interrupt
		interrupt-name = "touch-interrupt";

		reset-gpios = <&pio 1 0 GPIO_ACTIVE_LOW>; // PB0

		touchscreen-size-x = <800>;
		touchscreen-size-y = <480>;
		touchscreen-fuzz-x = <4>;
		touchscreen-fuzz-y = <7>;

		bootloader-key = /bits/ 8 <0x01 0x02 0x03 0x04 0x05 0x06 0x07 0x08>;
		active-distance = <8>;
		active-interval-ms = <0>;
		lowpower-interval-ms = <200>;
		touch-timeout-ms = <100>;
	};

	ext_codec: codec@4c {
		#sound-dai-cells = <0>;
		compatible = "ti,tlv320adc6140";
		reg = <0x4c>;
		ti,vref-source = <0>;
		ti,gpi-config = <0 0 0 0>;
		ti,gpio-config = <0 0>;
		reset-gpios = <&pio 4 8 GPIO_ACTIVE_HIGH>; // PE 8
	};
};


&lradc {
	vref-supply = <&reg_vcc3v3>;
	status = "okay";

	button-0 {
		label = "Select";
		linux,code = <KEY_SELECT>;
		channel = <0>;
		voltage = <1336000>;
	};

	button-1 {
		label = "Start";
		linux,code = <KEY_OK>;
		channel = <0>;
		voltage = <2000000>;
	};
};

/delete-node/ &uart2; // avoid conflict on PB1
/delete-node/ &spi0; // use GPIO to support 9bit spi
